<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shuan.project.signup.employer.CompanyContactInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cncdtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="@string/cncdtl"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#3333" />

            <EditText
                android:id="@+id/cnt_prsn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cnt_prsn"
                android:imeOptions="actionNext"
                android:inputType="text" />

            <EditText
                android:id="@+id/cnt_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cnt_mail"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/cnt_phn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cnt_phn"
                android:imeOptions="actionNext"
                android:maxLength="10"
                android:inputType="phone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/frm_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contact Time From"
                        android:imeOptions="actionDone"
                        android:inputType="time" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/to_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contact Time To"
                        android:imeOptions="actionDone"
                        android:inputType="time" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/cp_skip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:text="SKIP"
                        android:textColor="@color/colorAccent" />

                    <Button
                        android:id="@+id/cp_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@color/colorAccent"
                        android:text="NEXT"
                        android:textColor="@android:color/white"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
