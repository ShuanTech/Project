<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".signup.employee.EducationActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/qfy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/qual"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#333" />


            <Spinner
                android:id="@+id/level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qfy"
                android:layout_marginTop="@dimen/standard_margin"
                />


            <AutoCompleteTextView
                android:id="@+id/clg_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/level"
                android:layout_marginTop="@dimen/standard_margin"
                android:hint="@string/clg_name"
                android:imeOptions="actionNext"
                android:inputType="textAutoComplete" />

            <AutoCompleteTextView
                android:id="@+id/univ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clg_name"
                android:layout_marginTop="@dimen/standard_margin"
                android:hint="@string/univ"
                android:imeOptions="actionNext"
                android:inputType="textAutoComplete" />

            <AutoCompleteTextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/univ"
                android:layout_marginTop="@dimen/standard_margin"
                android:hint="@string/location"
                android:imeOptions="actionNext"
                android:inputType="textAutoComplete" />

            <AutoCompleteTextView
                android:id="@+id/concent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:layout_marginTop="@dimen/standard_margin"
                android:hint="@string/concent"
                android:imeOptions="actionNext"
                android:singleLine="true" />

            <LinearLayout
                android:id="@+id/frm_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/concent"
                android:layout_marginTop="@dimen/standard_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/frm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/frm"
                    android:textColor="#000" />

                <LinearLayout
                    android:id="@+id/frm_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/frm"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/f_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Year"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:maxLength="4" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/frm_mnth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/f_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:hint="Month"
                            android:imeOptions="actionNext"
                            android:singleLine="true" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/frm_dat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/f_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:hint="Date"
                            android:imeOptions="actionNext"
                            android:singleLine="true" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frm_date"
                android:layout_marginTop="@dimen/standard_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/to"
                    android:textColor="#000" />

                <LinearLayout
                    android:id="@+id/to_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/frm"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/t_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Year"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:maxLength="4" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/to_mnth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/t_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:hint="Month"
                            android:imeOptions="actionNext"
                            android:singleLine="true" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/to_dat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/t_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:hint="Date"
                            android:imeOptions="actionNext"
                            android:singleLine="true" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>



            <EditText
                android:id="@+id/agrt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/to_date"
                android:layout_marginTop="@dimen/standard_margin"
                android:hint="@string/agrt"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/agrt"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/q_skip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:text="SKIP"
                        android:textColor="@color/colorAccent" />

                    <Button
                        android:id="@+id/q_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@color/colorAccent"
                        android:text="NEXT"
                        android:textColor="@android:color/white"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

